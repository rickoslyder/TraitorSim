FROM python:3.12-slim

# Install dependencies
RUN pip install --no-cache-dir \
    google-genai>=1.56.0 \
    numpy>=1.26.0 \
    python-dotenv>=1.0.0 \
    httpx>=0.27.0

WORKDIR /app

# Copy source code
COPY src/ /app/src/

# Create data directories
RUN mkdir -p /app/data/memories /app/data/games

ENV PYTHONUNBUFFERED=1

# Run the containerized game engine
CMD ["python3", "-m", "src.traitorsim.__main_containerized__"]
